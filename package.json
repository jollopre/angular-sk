{
  "name": "angular-sk",
  "private": true,
  "version": "0.0.1",
  "description": "A skeleton project for AngularJS",
  "repository": "https://github.com/jollopre/angular-sk.git",
  "license": "",
  "devDependencies": {
    "http-server": "^0.8.0",
    "jasmine-core": "^2.3.4",
    "jasmine-reporters": "^2.0.7",
    "karma": "^0.13.9",
    "karma-chrome-launcher": "^0.2.0",
    "karma-firefox-launcher": "^0.1.6",
    "karma-jasmine": "^0.3.6",
    "karma-junit-reporter": "^0.3.4",
    "webdriver-manager": "^7.0.1",
    "protractor": "^2.2.0"
  },
  "scripts": {
    "postinstall": "npm run update-webdriver",

    "prestart-server": "npm install",
    "start-server": "http-server -a localhost -p 3000 -c-1",

    "preunit-test": "karma start spec/karma.conf.js",
    "unit-test-single-run": "karma start spec/karma.conf.js  --single-run",

    "update-webdriver": "webdriver-manager update",
    "start-webdriver": "webdriver-manager start",

    "e2e-test": "protractor spec/protractor.conf.js"
  }
}